  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "npm-watch": "^0.9.0",
    "serve": "^11.3.2"
  },
  "browserslist": "> 0.25%, not dead"
}